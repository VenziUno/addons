<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_lazada_brand_tree" model="ir.ui.view">
            <field name="name">lazada.brand.tree</field>
            <field name="model">lazada.brand</field>
            <field name="arch" type="xml">
                <tree string="Lazada Brands" create="0">
                    <field name="name"/>
                    <field name="name_en"/>
                    <field name="global_identifier"/>
                    <field name="lazada_brand_id"/>
                </tree>
            </field>
        </record>

        <record id="view_lazada_brand_form" model="ir.ui.view">
            <field name="name">lazada.brand.form</field>
            <field name="model">lazada.brand</field>
            <field name="arch" type="xml">
                <form string="Lazada Brands" create="0" edit="0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_lazada_brand" model="ir.actions.act_window">
            <field name="name">Brands</field>
            <field name="res_model">lazada.brand</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>