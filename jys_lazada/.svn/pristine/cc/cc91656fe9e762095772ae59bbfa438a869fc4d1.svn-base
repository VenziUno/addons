<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_lazada_attribute_tree" model="ir.ui.view">
            <field name="name">lazada.attribute.tree</field>
            <field name="model">lazada.attribute</field>
            <field name="arch" type="xml">
                <tree string="Lazada Attributes" create="0">
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="attribute_type"/>
                    <field name="input_type"/>
                    <field name="is_mandatory"/>
                    <field name="is_sale_prop" invisible="1"/>
                    <field name="is_key_prop" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_lazada_attribute_form" model="ir.ui.view">
            <field name="name">lazada.attribute.form</field>
            <field name="model">lazada.attribute</field>
            <field name="arch" type="xml">
                <form string="Lazada Attributes" create="0" edit="0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group col="4" colspan="2">
                            <field name="category_id" readonly="1"/>
                            <field name="attribute_type" readonly="1"/>
                            <field name="input_type" readonly="1"/>
                            <field name="is_mandatory" readonly="1"/>
                            <field name="is_sale_prop" readonly="1" invisible="1"/>
                            <field name="is_key_prop" readonly="1" invisible="1"/>
                        </group>
                        <h3>
                            <separator string="Values"/>
                        </h3>
                        <field name="value_ids" nolabel="1" readonly="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_lazada_attribute_value_tree" model="ir.ui.view">
            <field name="name">lazada.attribute.value.tree</field>
            <field name="model">lazada.attribute.value</field>
            <field name="arch" type="xml">
                <tree string="Lazada Attribute Values" create="0">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_lazada_attribute_value_form" model="ir.ui.view">
            <field name="name">lazada.attribute.value.form</field>
            <field name="model">lazada.attribute.value</field>
            <field name="arch" type="xml">
                <form string="Lazada Attribute Values" create="0" edit="0">
                    <sheet>
                        <group col="4" colspan="2">
                            <field name="name" readonly="1"/>
                            <field name="attribute_id" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_lazada_attribute_line_tree" model="ir.ui.view">
            <field name="name">lazada.attribute.line.tree</field>
            <field name="model">lazada.attribute.line</field>
            <field name="arch" type="xml">
                <tree string="Lazada Attribute Lines">
                    <field name="name" invisible="1"/>
                    <field name="product_tmpl_id"/>
                    <field name="attribute_id"/>
                    <field name="value"/>
                    <field name="is_mandatory"/>
                    <field name="input_type" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_lazada_attribute_line_form" model="ir.ui.view">
            <field name="name">lazada.attribute.line.form</field>
            <field name="model">lazada.attribute.line</field>
            <field name="arch" type="xml">
                <form string="Lazada Attribute Lines" create="0" edit="0">
                    <sheet>
                        <field name="name" invisible="1"/>
                        <field name="attribute_id" invisible="1"/>
                        <field name="lazada_category_id" invisible="1"/>
                        <group col="4" colspan="2">
                            <field name="product_tmpl_id" required="1" colspan="4"/>
                            <field name="attribute_id" required="1" domain="[('category_id', '=', lazada_category_id)]" options="{'no_create': True}"/>
                            <field name="value_id" required="is_mandatory == True" domain="[('attribute_id', '=', attribute_id)]" options="{'no_create': True}"/>
                            <field name="value" required="is_mandatory == True" readonly="input_type != 'TEXT_FILED'"/>
                            <field name="is_mandatory" readonly="1"/>
                            <field name="input_type" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_lazada_attribute" model="ir.actions.act_window">
            <field name="name">Attributes</field>
            <field name="res_model">lazada.attribute</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>