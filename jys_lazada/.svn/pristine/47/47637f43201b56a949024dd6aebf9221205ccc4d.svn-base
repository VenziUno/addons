<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_jys_lazada_company_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='branches']" position="after">
                    <page string="Lazada" name="page_lazada">
                        <separator string="API Settings"/>
                        
                        <group>
                            <field name="lazada_app_key"/>
                            <field name="lazada_app_secret"/>
                        </group>
                        
                        <separator string="URL"/>
                        
                        <group>
                            <field name="lazada_redirect_url"/>
                        </group>
                        
                        <separator string="Other Config"/>
                        
                        <group>
                            <field name="lazada_pricelist_id"/>
                            <field name="lazada_logistic_product_id"/>
                            <field name="lazada_commission_product_id"/>
                            <field name="lazada_rebate_product_id"/>
                        </group>
                        
                        <separator string="Shops"/>
                        <field name="lazada_shop_ids" nolabel="1" readonly="1">
                            <tree>
                                <field name="name"/>
                                <!-- <field name="shop_id"/> -->
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>